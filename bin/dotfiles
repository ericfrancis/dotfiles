#!/bin/bash

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
ROOT_DIR=$( cd $DIR && cd .. && pwd )
LINK_DIR=$( cd $ROOT_DIR/link && pwd )
COPY_DIR=$( cd $ROOT_DIR/copy && pwd )

for file in $( ls $LINK_DIR ); do
  [ -e ~/.$file ] && rm ~/.$file 
	echo $LINK_DIR/$file
	ln -s $LINK_DIR/$file ~/.$file
done

for file in $( ls $COPY_DIR ); do
	[ -e ~/.$file ] && break
	cp $COPY_DIR/$file ~/.$file
done
