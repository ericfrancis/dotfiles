ForwardAgent yes
IdentityFile ~/.ssh/keys/id_rsa
IdentityFile ~/.ssh/keys/elasticbamboo.pk
IdentityFile ~/.ssh/keys/hcsc-slalom.pem
# http://blogs.perl.org/users/smylers/2011/08/ssh-productivity-tips.html

# we dont use and speeds up
GSSAPIAuthentication no

# makes ssh connections more resilient to network failures
TCPKeepAlive no
ServerAliveInterval 30
ServerAliveCountMax 2

Host *amazonaws.com
	User ec2-user
	StrictHostKeyChecking no
	UserKnownHostsFile=/dev/null

Host dev
	Hostname dev.hcsc.slalomcloud.com
	User ec2-user
